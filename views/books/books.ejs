<% include ../partials/header %>

<h1>Here are the books</h1>

<% for(var i=0; i<books.length; i++){ %>
  <h2><%= books[i].title %></h2>
  <h4><%= books[i].author %></h4>
  <img src="<%= books[i].image %>" alt="">
  <p><%= books[i].summary.substring(0, 100) %>...</p>

  <a href="/books/<%= books[i]._id %>">Read More</a>
<% } %>

<% include ../partials/footer %>
