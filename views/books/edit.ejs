<% include ../partials/header %>


<h1>Edit <%= book.title %></h1>

<form class="" action="/books/<%= book._id %>?_method=PUT" method="post">
  <input type="text" name="book[title]" value="<%= book.title %>">
  <input type="text" name="book[author]" value="<%= book.author %>">
  <input type="text" name="book[image]" value="<%= book.image %>">
  <textarea name="book[summary]"><%= book.summary %></textarea>
  <button>Submit</button>

</form>

