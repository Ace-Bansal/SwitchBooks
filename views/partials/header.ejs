<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>SwitchBooks</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">

    <script type="text/javascript">
      (function(p,u,s,h){
          p._pcq=p._pcq||[];
          p._pcq.push(['_currentTime',Date.now()]);
          s=u.createElement('script');
          s.type='text/javascript';
          s.async=true;
          s.src='https://cdn.pushcrew.com/js/d48114d433c44443db3dfd21562afe3c.js';
          h=u.getElementsByTagName('script')[0];
          h.parentNode.insertBefore(s,h);
      })(window,document);
    </script>
  </head>
  <body>

    <div class="ui inverted menu">
  <a class="item" href="/">SwitchBooks</a>

  <a class="item" href="/books/new">Add A Book</a>
  <% if(currentUser){ %>
    <a class="item" href="/users/<%= currentUser._id %>/sentDeals">Sent Deals</a>
    <a class="item" href="/users/<%= currentUser._id %>/receivedDeals">Received Deals</a>
  <% } %>

  <!-- <a class="item">Submit</a> -->
  <div class="right menu">
      <a class="item" target="_blank" href="https://github.com/ace-bansal/switchbooks"><i class="github icon"></i></a>
    <% if(!currentUser){ %>
      <a class="item" href="/register">Sign Up</a>
      <a class="item" href="/login">Login</a>
    <% } else { %>
      <a class="item" href="/users/<%= currentUser._id %>">Signed is as <%= currentUser.username %></a>
      <a class="item" href="/logout">Logout</a>
    <% } %>

  </div>
</div>

<div class="ui container">
  <% if(success && success.length>0){ %>
    <div class="ui success message">
      <!-- <i class="close icon"></i> -->
      <div class="header">
        <%= success %>
      </div>
    </div>
  <% } %>
  <% if(negative && negative.length>0){ %>
    <div class="ui negative message">
      <!-- <i class="close icon"></i> -->
      <div class="header">
        <%= negative %>
      </div>
    </div>
  <% } %>
</div>
